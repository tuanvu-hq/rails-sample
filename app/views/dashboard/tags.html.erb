<section id="dashboard_screen" class="grid grid-cols-[18rem,_1fr] relative">
  <div class="flex flex-col gap-2 bg-neutral-900 h-[100dvh] sticky top-0">
    <%= render partial: "dashboard/custom_main_list"%>
    <%= render partial: "dashboard/custom_sub_list"%>
  </div>
  <div class="space-y-10 p-8">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold">Tags</h1>
    </div>
    <% if @tags && @tags.any? %>
      <% @tags.each do |tag| %>
        <%= render partial: "dashboard/custom_tag_table", locals: { tag: tag } %>
      <% end %>
    <% else %>
      <p class="text-neutral-400">No tags have been created yet.</p>
    <% end %>
  </div>
</section>
