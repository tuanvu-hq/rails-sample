<section id="home_screen" class="grid h-[100dvh] grid-rows-[auto,_1fr]"
>
  <%= render "shared/navbar"%>
  <div class="flex flex-col items-center justify-center gap-20">
    <div class="grid gap-2">
      <h1 class="max-w-2xl text-center text-4xl">
        Struggling with brainstorming? Don't worry! With <span
					class="bg-gradient-to-r from-red-500 to-pink-500 bg-clip-text font-bold text-transparent"
					>Railtastick Notes</span
				>, easily jot down your ideas.
      </h1>
      <p class="mx-auto text-neutral-400">- powered with Ruby on Rails</p>
    </div>
    <% if auth_is_user_signed_in? %>
      <%= link_to "Have an idea? Start NOW!", dashboard_notes_path, class: "grid h-8 w-fit place-items-center rounded-full bg-red-500 px-8 text-white duration-300 hover:bg-red-400" %>
    <% else %>
      <%= link_to "Try now, it's FREE!", new_sign_up_path, class: "grid h-8 w-fit place-items-center rounded-full bg-red-500 px-8 text-white duration-300 hover:bg-red-400" %>
    <% end %>
  </div>
</section>
