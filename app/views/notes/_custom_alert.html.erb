<% if form.object.errors.any? %>
  <div class="grid h-full grid-rows-[auto,_1fr] gap-2">
    <h2 class="mb-4 text-xl font-bold text-white">Caution</h2>
    <div class="flex flex-col gap-2 overflow-y-scroll az-scrollbar-hide">
      <% form.object.errors.full_messages.each do |message| %>
        <p class="rounded bg-white px-4 py-2">
          <%= message %>.
        </p>
      <% end %>
    </div>
  </div>
<%else%>
  <div class="grid place-items-center">
    <div class="h-[20rem] w-[20rem]">
      <%= render inline: Rails.root.join('public/svg/ruby.svg').read, layout: false %>
    </div>
  </div>
<% end %>